<div class="wrap">
  <div>
    <h1>Publisher Settings</h1>
    <p>Below is list of authorizations for external services required to post quotes to them.</p>
  </div>

  <hr>

  <div>
    <h2>Buffer</h2>
    {% if buffer.isConfigured %}
      <p>
        <b>Client ID</b>: {{ buffer.getData.client_id }}
        <br>
        <b>Client Secret</b>: {{ buffer.getData.client_secret }}
      </p>
      {% if buffer.isConnected %}
        <p>
          <b>OAuth Token</b>: {{ buffer.getData.oauth_token }}
        </p>
        <p>
          <b>Profiles</b> (IDs):
          {% for profile in buffer.getProfilesList %}
            <br><em>{{ profile.formatted_username }}</em>: {{ profile.id }}
          {% endfor %}
        </p>
        <p>
          <b>Logged in as</b>: {{ buffer.getUserData.name }}
        </p>
      {% else %}
        <p>
          <a href="{{ buffer.generateConnectURL }}" class="button button-primary">Connect to Buffer</a>
        </p>
      {% endif %}
    {% else %}
      Buffer API key and secret has not been provided. Please fill proper fields in <a href="<?php echo admin_url('admin.php?page=acf-options'); ?>">Options page</a> (API tab).
    {% endif %}
  </div>

  <hr>

  <div>
    <h2>Tumblr</h2>
    {% if tumblr.isConfigured %}
      <p>
        <b>Consumer Key</b>: {{ tumblr.getData.consumer_key }}
        <br>
        <b>Consumer Secret</b>: {{ tumblr.getData.consumer_secret }}
      </p>
      {% if tumblr.isConnected %}
        <p>
          <b>OAuth Token</b>: {{ tumblr.getData.oauth_token }}
          <br>
          <b>OAuth Token Secret</b>: {{ tumblr.getData.oauth_token_secret }}
        </p>
        <p>
          <b>Logged in as</b>: {{ tumblr.getUserData.name }}
        </p>
      {% else %}
        <p>
          <a href="{{ tumblr.generateConnectURL }}" class="button button-primary">Connect to Tumblr</a>
        </p>
      {% endif %}
    {% else %}
      Tumblr API key and secret has not been provided. Please fill proper fields in <a href="<?php echo admin_url('admin.php?page=acf-options'); ?>">Options page</a> (API tab).
    {% endif %}
  </div>

  <hr>

  <div>
    <h2>Twitter</h2>
    {% if twitter.isConfigured %}
      <p>
        <b>Consumer Key</b>: {{ twitter.getData.consumer_key }}
        <br>
        <b>Consumer Secret</b>: {{ twitter.getData.consumer_secret }}
      </p>
      {% if twitter.isConnected %}
        <p>
          <b>OAuth Token</b>: {{ twitter.getData.oauth_token }}
          <br>
          <b>OAuth Token Secret</b>: {{ twitter.getData.oauth_token_secret }}
        </p>
        <p>
          <b>Logged in as</b>: {{ twitter.getUserData.name }}
        </p>
      {% else %}
        <p>
          <a href="{{ twitter.generateConnectURL }}" class="button button-primary">Connect to Twitter</a>
        </p>
      {% endif %}
    {% else %}
      Twitter API key and secret has not been provided. Please fill proper fields in <a href="<?php echo admin_url('admin.php?page=acf-options'); ?>">Options page</a> (API tab).
    {% endif %}
  </div>

  <hr>

  <div>
    <h2>Facebook</h2>
    {% if facebook.isConfigured %}
      <p>
        <b>App ID</b>: {{ facebook.getData.app_id }}
        <br>
        <b>App Secret</b>: {{ facebook.getData.app_secret }}
      </p>
      {% if facebook.isConnected %}
        <p>
          <b>OAuth Token</b>: {{ facebook.getData.oauth_token | slice(0, 16) }}&hellip;
        </p>
        <p>
          <b>Pages</b> (IDs):
          {% for page in facebook.getPagesList %}
            <br><em>{{ page.name }}</em>: {{ page.id }}
          {% endfor %}
        </p>
        <p>
          <b>Logged in as</b>: {{ facebook.getUserData.name }}
        </p>
      {% else %}
        <p>
          <a href="{{ facebook.generateConnectURL }}" class="button button-primary">Connect to Facebook</a>
        </p>
      {% endif %}
    {% else %}
      Facebook API ID and secret has not been provided. Please fill proper fields in <a href="<?php echo admin_url('admin.php?page=acf-options'); ?>">Options page</a> (API tab).
    {% endif %}
  </div>
</div>
